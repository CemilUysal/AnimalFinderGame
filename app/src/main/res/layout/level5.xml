<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".FifthLevel">

    <TextView
        android:id="@+id/txtlevel5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        android:text="Level 5"
        android:textSize="30dp"
        android:background="@color/teal_700"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtAnimalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="speak_name"
        android:text=""
        android:textSize="30dp"
        android:background="@color/teal_200"
        tools:ignore="MissingConstraints"
        android:textColor="@color/purple_200"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txtlevel5"/>
    <TextView
        android:id="@+id/higherscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher Score"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtAnimalName"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/kronometre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAnimalName"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/image1"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/higherscore"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image2"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/higherscore"
        app:layout_constraintEnd_toStartOf="@+id/image3"
        app:layout_constraintStart_toEndOf="@+id/image1"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image3"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/higherscore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image2"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image4"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintBottom_toTopOf="@id/image8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image5"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image5"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintBottom_toTopOf="@id/image8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image4"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image6"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtPoint"
        app:layout_constraintEnd_toStartOf="@+id/image7"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image7"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/image8"
        app:layout_constraintStart_toEndOf="@+id/image6"
        app:layout_constraintBottom_toTopOf="@id/txtPoint"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/image8"
        android:tag=""
        android:onClick="answer_controller"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image7"
        app:layout_constraintBottom_toTopOf="@id/txtPoint"
        tools:ignore="MissingConstraints,UnknownId" />


    <TextView
        android:id="@+id/txtPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Points: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
